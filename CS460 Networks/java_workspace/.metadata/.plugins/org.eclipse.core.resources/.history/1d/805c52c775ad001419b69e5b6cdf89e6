package CS249_Project1;

public class QueueKR {

	private int[] array;
	private int front;
	private int rear;
	private int numItems;
	
	
	QueueKR(){
		array = new int[10];
		front = 0;
		rear = -1;
	}
	
	public QueueKR(int size) throws Exception{
		
		if(size < 1)
			throw new Exception("Error: Queue Size");
	
		array = new int[size];
		front = 0;
		rear = -1;
	}
	
	public void add(int newElement) throws Exception{
		if(numItems == array.length)
			throw new Exception("Error: Add");
		
		rear = (rear+1 < array.length-1) ? rear+1 : 0; 
		numItems++;
		array[rear] = newElement;
	}
	
	public int remove() throws Exception{
		if(numItems < 1)
			throw new Exception("Error:remove");
		
		int temp = array[front];
		front = (rear+1 < array.length-1) ? front+1 : 0;
		numItems--;
		return temp;
	}
	
	public void display(){
		
		for(int i = front; i != rear+1; i = (i < array.length) ? i+1 : 0){
			System.out.print(array[i] + ",");
		}
	}
	
	
	public static void main(String[] args){
		
		QueueKR q = new QueueKR();
		try {
			q.add(2);
			q.add(5);
			q.add(10);
			q.add(12);
			
			q.display();
			
			q.remove();
			System.out.println();
			q.display();
			
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		
		
		
		
		
		
		
	}
	
	
}
