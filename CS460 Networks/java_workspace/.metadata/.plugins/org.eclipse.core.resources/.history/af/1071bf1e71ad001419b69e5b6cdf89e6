package CS249_Project1;

import java.lang.reflect.Array;

public class QueueKR {

	private int[] array;
	private int front;
	private int rear;
	private int numItems;
	
	
	QueueKR(){
		this.array = new int[10];
		this.front = 0;
		this.rear = -1;
	}
	
	public QueueKR(int size) throws Exception{
		
		if(size < 1)
			throw new Exception();
	
		this.array = new int[size];
		this.front = 0;
		this.rear = -1;
	}
	
	public void add(int newElement){
		
		if(front < array.length)
			front++;
		else
			front = 0;
		array[front] = newElement;
	}
	
	public static void main(String[] args){
		
		
		
		
	}
	
	
}
