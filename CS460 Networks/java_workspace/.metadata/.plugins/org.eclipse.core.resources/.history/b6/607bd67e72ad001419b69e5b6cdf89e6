package CS249_Project1;

import java.lang.reflect.Array;

public class QueueKR {

	private int[] array;
	private int front;
	private int rear;
	private int numItems;
	
	
	QueueKR(){
		array = new int[10];
		front = 0;
		rear = -1;
	}
	
	public QueueKR(int size) throws Exception{
		
		if(size < 1)
			throw new Exception();
	
		array = new int[size];
		front = 0;
		rear = -1;
	}
	
	public void add(int newElement) throws Exception{
		if(numItems == array.length)
			throw new Exception();
		
		rear = (rear < 1) ? array.length-1 : --rear; 
		array[rear] = newElement;
	}
	
	public void remove() throws Exception{
		if(numItems < 1)
			throw new Exception();
		
		
		front = (front < array.length-1) ? front+1 : 0;
		
		
		
		
	}
	
	
	public static void main(String[] args){
		
		
		
		
	}
	
	
}
